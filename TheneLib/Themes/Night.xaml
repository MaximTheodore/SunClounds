<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="MainColor" Color="#F8C5B4" />
    <SolidColorBrush x:Key="SecondaryColor" Color="#591E6E" />
    <SolidColorBrush x:Key="FocusColor" Color="#F8C5B4" />
    <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFF" />
    <FontFamily x:Key="AppFont">Jura</FontFamily>

    <Style x:Key="CustomButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#F8C5B4" />
        <!-- Главный цвет -->
        <Setter Property="Foreground" Value="#591E6E" />
        <!-- Вторичный цвет -->
        <Setter Property="BorderBrush" Value="#F8C5B4" />
        <!-- Фокусировочный цвет -->
        <Setter Property="FontFamily" Value="Jura" />
        <!-- Шрифт -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="#FFFFFF">
                        <!-- Фоновый цвет -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!-- Добавьте другие свойства стиля, если необходимо -->
    </Style>


</ResourceDictionary>